#!/usr/bin/env ruby
require_relative 'bundle/bundler/setup'
require 'charmkit'
require 'fileutils'

pkg [
    'nginx-full', 'php-fpm',      'php-cgi',      'php-curl', 'php-gd', 'php-json',
    'php-mcrypt', 'php-readline', 'php-mbstring', 'php-xml'
  ], :update_cache

app_path = get 'app_path'

FileUtils.mkdir_p app_path unless Dir.exists? app_path

`wget -q -O /tmp/dokuwiki.tgz http://download.dokuwiki.org/src/dokuwiki/dokuwiki-stable.tgz`

`tar xf /tmp/dokuwiki.tgz -C #{app_path} --strip-components=1` unless 

`rm -rf #{app_path}/conf/install.php` unless File.exists? "#{app_path}/conf/install.php"
